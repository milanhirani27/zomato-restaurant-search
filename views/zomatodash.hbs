        <label for="city">Enter the location</label>
            <input class= "form-control" type="text" name="city" id="city" placeholder= "Surat, India, etc." required>
      </div>
      <button type="submit" class="btn btn-light">Search</button>
    </form>
    </div>
</body>
</html>
